/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

 
.temp{
  text-align: center; 
  font-size: 200rpx;
  opacity: 0.8;
  line-height: 280rpx;
}
.weather{
  font-size: 40rpx;
  line-height: 56rpx;
  text-align: center;
  opacity: 0.65;
}
.weather-wrapper{
  position: relative;
  padding-top: 174rpx;
  padding-bottom: 250rpx;
}
.wearher-bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.time-tips{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 36rpx;
}
.time-icon{
  margin-right: 10rpx;
  width: 36rpx;
  height: 28rpx;
}
.time-text{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}
.cast-list{
  display: flex;
}
.cast-item{
  display: flex;
  flex-direction: column;
  width: 120rpx;
  flex-shrink: 0;
  align-items: center;
}
.item-time{
  font-size: 30rpx;
  line-height: 42rpx;

}
.item-weather{
  margin-top: 36rpx;
  width: 60rpx;
  height: 60rpx;
}
.item-temp{
  margin-top: 30rpx;
  font-size: 40rpx;
  line-height: 56rpx;
}

.today-weather-contianer{
  display: flex;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  align-items: center;
  height: 90rpx;
  bottom: 0;
  position: absolute;
  left: 40rpx;
  right: 40rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}
.day-text{
  flex-grow: 1;
  padding-right: 30rpx;
  text-align: left
}
.day-temp{
  padding-right: 30rpx;
}
.arrow-icon{
  width: 13rpx;
  height: 24rpx;
}